@model IEnumerable<ERental.Entities.Customer>

@{
    ViewData["Title"] = "Index";
}
<style>
    .color{
          background-color:#C0C0C0;
          color: black;
          border: 2px solid green;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          padding: 8px 12px;
          font-weight: bold;
    }
    .create{
          background-color:#2F4F4F;
          color: black;
          border: 2px solid green;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          padding: 8px 12px;
          color:white;
          font-weight: bold;
    }
    .delete{
          background-color:red;
          border: 2px solid green;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          padding: 8px 12px;
          color:white;
          font-weight: bold;
    
    }
</style>


<h1>List of Vendors</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PinCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PinCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.CityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateId)
            </td>
            <td>
                <a class="color" asp-action="Details" asp-route-id="@item.CustomerId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
